<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard</title>
    <style>
        body { font-family: Arial, sans-serif; background-color: #f4f4f4; }
        .navbar { background-color: #333; overflow: hidden; }
        .navbar a { float: left; display: block; color: #f2f2f2; text-align: center; padding: 14px 20px; text-decoration: none; }
        .container { padding: 20px; }
        .logout-btn, .btn { padding: 10px 20px; color: white; border: none; cursor: pointer; }
        .logout-btn { float: right; background-color: #f44336; }
        .btn { background-color: #4CAF50; }
        .delete-btn { background-color: #f44336; }
    </style>
</head>
<body>
    <div class="navbar">
        <a href="#">Dashboard</a>
        <form action="/logout" method="GET" style="float: right;">
            <button type="submit" class="logout-btn">Logout</button>
        </form>
    </div>

    <div class="container">
        <h1>Teacher Dashboard</h1>
        <h2>Student List:</h2>
        <table border="1" cellpadding="10">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Game</th>
                <th>Score</th>
                <th>Date Played</th>
                <th>Actions</th>
            </tr>
            <% students.forEach(student => { %>
                <tr>
                    <td><%= student.fullname %></td>
                    <td><%= student.email %></td>
                    <td><%= student.game_name %></td>
                    <td><%= student.score %></td>
                    <td><%= student.date_played %></td>
                    <td>
                        <a href="/update-student/<%= student.id %>" class="btn">Update</a>
                        <a href="/delete-student/<%= student.id %>?_method=DELETE" 
                           onclick="return confirm('ARE YOU SURE?');" class="btn delete-btn">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </table>
        <a href="/add-student" class="btn">Add New Student</a>
    </div>
</body>
</html>
